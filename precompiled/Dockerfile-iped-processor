# COPY IPEDConfig.txt /root/IPED/iped/
# Copiando o perfil fastrobust
# COPY ./fastrobust /root/IPED/iped/profiles/pt-BR/fastrobust
# COPY ./pedorobust /root/IPED/iped/profiles/pt-BR/pedorobust

WORKDIR /root/IPED/iped
